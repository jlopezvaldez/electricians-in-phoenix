---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Advertise Your Company'>
  <main>
    <div
      class='flex flex-col justify-center max-w-2xl items-center my-8 text-center mx-auto'
    >
      <h1 class='tracking-tight'>Boost your company to the top</h1>
      <p class='text-center mb-6 text-2xl'>
        This feature is coming <span class='italic'>soon</span>.
      </p>
      <p class='text-center mb-6 text-2xl'>
        In the meantime please <a
          href='mailto:holidaysmith524@gmail.com'
          class='text-amber-600 italic'>email</a
        > me for inquiries.
      </p>
    </div>
  </main>
</Layout>

<style>
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 0.5em;
  }
</style>
